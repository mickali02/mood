<!-- ui/html/dashboard.tmpl -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/static/styles.css">
</head>
<body class="dashboard-page">
    <!-- Animated Stars Background -->
    <div class="stars-container" id="stars-container">
        <!-- Stars will be added via JavaScript -->
    </div>
    
    <!-- Decorative Elements -->
    <div class="moon"></div>
    <div class="cloud"></div>

    <div class="dashboard-container">
        <!-- Vertical Sidebar Navigation -->
        <aside class="dashboard-sidebar">
            <nav class="sidebar-nav">
                <ul>
                    <li>
                        <a href="/landing" data-title="Home">
                            <img src="/static/resources/icons/home.png" alt="Home" class="nav-icon">
                        </a>
                    </li>
                    <li>
                        <a href="/mood/new" data-title="Add New Entry">
                             <img src="/static/resources/icons/add.png" alt="Add Entry" class="nav-icon">
                        </a>
                    </li>
                    <li>
                        <a href="/moods" data-title="View Moods">
                            <img src="/static/resources/icons/list.png" alt="View Moods" class="nav-icon">
                        </a>
                    </li>
                     <li>
                        <a href="#" data-title="Search">
                            <img src="/static/resources/icons/search.png" alt="Search" class="nav-icon">
                        </a>
                    </li>
                    <li>
                        <a href="#" data-title="Mood Stats">
                             <img src="/static/resources/icons/stats.png" alt="Stats" class="nav-icon">
                        </a>
                    </li>
                    <li class="nav-separator"></li> <!-- Separator -->
                     <li>
                        <a href="#" data-title="Profile">
                            <img src="/static/resources/icons/profile.png" alt="Profile" class="nav-icon">
                        </a>
                    </li>
                    <li>
                        <a href="#" data-title="Logout">
                            <img src="/static/resources/icons/logout.png" alt="Logout" class="nav-icon">
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Dashboard Content -->
        <main class="dashboard-main">
            <header class="dashboard-header">
                <h1>Hi welcome back Mickali!</h1>
            </header>
            <section class="dashboard-content">
                <p>Let's get started on your healing journey.</p>
                <a href="/mood/new" class="btn dashboard-add-btn">ADD NEW MOOD ENTRY</a>
            </section>
        </main>
    </div>

    <!-- JavaScript for creating animated stars -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const starsContainer = document.getElementById('stars-container');
            const starCount = 50; // Number of stars to create
            
            // Create stars
            for (let i = 0; i < starCount; i++) {
                const star = document.createElement('div');
                
                // Random star properties
                const size = Math.random() < 0.6 ? 'small' : (Math.random() < 0.9 ? 'medium' : 'large');
                const top = Math.random() * 100;
                const left = Math.random() * 100;
                const duration = 3 + Math.random() * 7; // Between 3-10s
                const delay = Math.random() * 5; // Between 0-5s
                
                // Set star styles
                star.classList.add('star', size);
                star.style.top = `${top}%`;
                star.style.left = `${left}%`;
                star.style.setProperty('--duration', `${duration}s`);
                star.style.setProperty('--delay', `${delay}s`);
                
                // Add to container
                starsContainer.appendChild(star);
            }
        });
    </script>
</body>
</html>