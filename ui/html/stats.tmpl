<!-- ui/html/stats.tmpl -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.Title}}</title>
    <link rel="stylesheet" href="/static/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
</head>
<body class="dashboard-page stats-page-background">

    <!-- Add is-loading class to the main container initially -->
    <div class="stats-container is-loading"
         id="stats-data-container"
         data-emotion-counts='{{.EmotionCountsJSON}}'
         data-weekly-counts='{{.WeeklyCountsJSON}}'
         data-has-data="{{gt .Stats.TotalEntries 0}}">

        <header class="stats-header">
            <h1>Your Mood Statistics</h1>
        </header>

        <!-- Optional: Loading Indicator -->
        <div class="stats-loading-indicator">
            <p>Loading statistics...</p>
        </div>

        <!-- **** WRAPPER for main stats content **** -->
        <div class="stats-main-content"> <!-- NO is-loading here -->

            {{if gt .Stats.TotalEntries 0}} <!-- Check if there's data -->

                <!-- Page 1 Content: Summary + Bar + Pie -->
                <div id="stats-page-1" class="stats-page active-stats-page">
                    <section class="stats-top-grid">

                        <!-- =================================== -->
                        <!-- == Column 1: Summary Cards - ADD THIS BACK == -->
                        <!-- =================================== -->
                        <div class="stats-summary-column">
                            <div class="summary-card">
                                <h3>Total Entries</h3>
                                <p>{{.Stats.TotalEntries}}</p>
                            </div>
                            {{with .Stats.MostCommonEmotion}}
                            <div class="summary-card">
                                <h3>Most Common</h3>
                                <p>
                                    <span class="emoji" style="color: {{.Color}};">{{.Emoji}}</span> {{.Name}}
                                    <span class="summary-card-detail">({{.Count}} times)</span>
                                </p>
                            </div>
                            {{else}}
                            <div class="summary-card"><h3>Most Common</h3><p>-</p></div>
                            {{end}}
                            {{with .Stats.LatestMood}}
                            <div class="summary-card">
                                <h3>Latest Mood</h3>
                                <p class="latest-mood-info">
                                    <span class="emoji" style="color: {{.Color}};">{{.Emoji}}</span> {{.Title}}
                                    <span class="summary-card-detail latest-mood-date">{{.CreatedAt | HumanDate}}</span>
                                </p>
                            </div>
                            {{else}}
                            <div class="summary-card"><h3>Latest Mood</h3><p>-</p></div>
                            {{end}}
                            <div class="summary-card">
                                <h3>Avg. Entries / Week</h3>
                                <p>{{printf "%.1f" .Stats.AvgEntriesPerWeek}}</p>
                            </div>
                        </div>
                        <!-- =================================== -->
                        <!-- == END Summary Cards Column ======== -->
                        <!-- =================================== -->


                        <!-- Column 2: Bar Chart -->
                        <div class="stats-chart-column">
                            <div class="chart-container">
                                <h3>Emotion Frequency</h3>
                                <!-- ============================= -->
                                <!-- == ADD CANVAS BACK ========= -->
                                <canvas id="emotionBarChart"></canvas>
                                <!-- ============================= -->
                            </div>
                        </div>

                        <!-- Column 3: Pie Chart -->
                        <div class="stats-chart-column">
                            <div class="chart-container">
                                <h3>Emotion Breakdown</h3>
                                <!-- ============================= -->
                                <!-- == ADD CANVAS BACK ========= -->
                                <canvas id="emotionPieChart"></canvas>
                                <!-- ============================= -->
                            </div>
                        </div>
                    </section>
                </div>

                <!-- Page 2 Content: Line Chart -->
                <div id="stats-page-2" class="stats-page">
                    <section class="stats-line-chart-section">
                         <div class="chart-container chart-full-width">
                            <h3>Entries per Week</h3>
                            <!-- ============================= -->
                            <!-- == ADD CANVAS BACK ========= -->
                            <canvas id="weeklyLineChart"></canvas>
                             <!-- ============================= -->
                            <p class="chart-description">Total mood entries logged per week.</p>
                         </div>
                    </section>
                </div>

            {{else}} <!-- If no data -->

                <!-- No Stats Message -->
                <div class="no-stats">
                    <p>You haven't logged enough moods to generate statistics yet. Keep tracking!</p>
                     <a href="/dashboard" class="back-link">← Back to Dashboard</a>
                </div>

            {{end}} <!-- End check for data -->

        </div> <!-- **** END WRAPPER for main stats content **** -->

        <!-- Quote, Controls, Footer are OUTSIDE the wrapper that gets hidden/shown -->
        <p class="stats-quote">{{.Quote}}</p>

        <div class="stats-controls-row">
            <a href="/dashboard" class="back-link stats-back-link">← Back to Dashboard</a>
            <!-- Pagination will be hidden by JS if only 1 page or no data -->
            <nav class="stats-custom-pagination">
                <button id="stats-prev-page" class="btn" disabled>< Previous</button>
                <span id="stats-page-indicator">Page 1 of 2</span>
                <button id="stats-next-page" class="btn">Next ></button>
            </nav>
            <div class="back-link-placeholder"></div>
        </div>

        <footer class="stats-footer">
             <!-- Footer content -->
        </footer>

    </div> <!-- End stats-container -->

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chroma-js/2.4.2/chroma.min.js"></script>
    <script src="/static/js/stats_charts.js" defer></script>

</body>
</html>